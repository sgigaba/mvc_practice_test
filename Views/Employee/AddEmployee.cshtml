@{
}

<form action="AddEmployee" method="post">
    <div class="form-group row">
        <label for="FirstName">First Name</label>
        <input type="text" class="form-control" name="FirstName" placeholder="First Name">
    </div>
    <br />
    <div class="form-group row">
        <label for="LastName">Last Name</label>
        <input type="text" class="form-control" name="LastName" placeholder="LastNname">
    </div>
    <br />
    <div class="form-group row">
        <label for="MiddleName">Middle Name</label>
        <input type="text" class="form-control" name="MiddleName" placeholder="Middle Name">
    </div>
    <br />
    <div class="form-group row">
        <label for="PrefferedName">Preffered Name</label>
        <input type="text" class="form-control" name="PrefferedName" placeholder="Preffered Name">
    </div>
    <div class="form-group row">
        <label for="Titles">Title</label>
        <select name="Titles" id="Titles"> 
            @foreach(var employee in Model)
            {
                <option value="@employee.EnumTitle.Title"> @employee.EnumTitle.Title</option>
            }
        </select>
    </div>
    <br />
    <input type="submit" class="btn btn-primary" value="Submit Form">
</form>